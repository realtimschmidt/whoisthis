<%= form_for [quiz, card] do |f| %>
  <% if card.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(card.errors.count, "error") %>.</h4>
      <ul>
        <% card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(card.errors[:photo]) do %>
    <%= f.label :photo %>
    <%= f.file_field :photo, class: 'form-control'%>
  <% end %>
  <%= form_group_tag(card.errors[:name]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter name here" %>
  <% end %>
  <%= form_group_tag(card.errors[:role]) do %>
    <%= f.label :role %>
    <%= f.text_field :role, class: 'form-control', placeholder: "Enter current role here" %>
  <% end %>
  <%= form_group_tag(card.errors[:company]) do %>
    <%= f.label :company %>
    <%= f.text_field :company, class: 'form-control', placeholder: "Enter current company here" %>
  <% end %>
  <%= form_group_tag(card.errors[:city]) do %>
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control', placeholder: "Enter curent city here" %>
  <% end %>
  <%= form_group_tag(card.errors[:school]) do %>
    <%= f.label :school %>
    <%= f.text_field :school, class: 'form-control', placeholder: "Enter school last attended here" %>
  <% end %>
  <br/>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
