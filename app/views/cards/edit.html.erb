<h1>Edit Card</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for cards</p>
    <ul>
      <li>The shorter the better</li>
      <li>Make them memorable</li>
      <li>Complete all fields</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@card.quiz, @card] do |f| %>
      <div class="form-group">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter name here" %>
      </div>
      <div class="form-group">
        <%= f.label :role %>
        <%= f.text_field :role, class: 'form-control', placeholder: "Enter current role here" %>
      </div>
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control', placeholder: "Enter curent city here" %>
      </div>
      <div class="form-group">
        <%= f.label :school %>
        <%= f.text_field :school, class: 'form-control', placeholder: "Enter school last attended here" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
