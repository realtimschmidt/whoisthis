<h1><%= @card.name %></h1>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <p><%= @card.image %></p>
        <p><strong>Name: </strong><%= @card.name %></p>
        <p><strong>Current Role: </strong><%= @card.role %></p>
        <p><strong>Current City: </strong><%= @card.city %></p>
        <p><strong>Gradute of: </strong><%= @card.school %></p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_quiz_card_path(@card.quiz, @card), class: 'btn btn-success' %>
    <%= link_to "Delete Card", [@card.quiz, @card], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this card?' } %>
  </div>
</div>
