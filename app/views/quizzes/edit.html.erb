<h1>Edit Quiz</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for quizzes</p>
    <ul>
      <li>The shorter the better</li>
      <li>Make them memorable</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @quiz do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter quiz title" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
