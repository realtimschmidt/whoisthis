<h1>New Quiz</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for quizzes</p>
    <ul>
      <li>The shorter the better</li>
      <li>Make them memorable</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@quiz] do |f| %>
      <% if @quiz.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@quiz.errors.count, "error") %>.</h4>
          <ul>
            <% @quiz.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_group_tag(@quiz.errors[:title]) do %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter quiz title" %>
      <% end %>
      <br/>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
